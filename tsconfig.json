{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "outDir": "./lib",
    "rootDir": "./src",

    "strict": true,
    "noImplicitAny": false,

    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@scraper/*": ["./src/scraper/*"],
      "@grouper/*": ["./src/grouper/*"],
      "@checker/*": ["./src/checker/*"],
      "@placer/*": ["./src/placer/*"],
      "@aliases/*": ["./src/aliases/*"],
      "@williamhill/*": ["./src/scraper/williamhill/*"],
      "@betfair/*": ["./src/scraper/betfair/*"],
      "@eurobet/*": ["./src/scraper/eurobet/*"],
      "@sisal/*": ["./src/scraper/sisal/*"]
    }

  }
}

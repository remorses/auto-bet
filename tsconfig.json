{
  "compilerOptions": {
    /* Basic Options */
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "es2016", "esnext"],
    "allowJs": true,
    "outDir": "./lib",
    "rootDir": "./src",

    "strict": true,
    "noImplicitAny": false,

    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@scraper/*": ["./src/scraper/*"],
      "@williamhill/*": ["./src/scraper/williamhill/*"]
    }

  }
}
